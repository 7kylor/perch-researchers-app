{
  "name": "perch-app",
  "version": "1.0.0",
  "description": "Local-first Electron app for knowledge management (papers, annotations, AI)",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently -k \"bun run tsc:watch\" \"vite --port 5173 --strictPort\" \"wait-on tcp:5173 dist/main/index.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "tsc:watch": "tsc -w -p tsconfig.main.json",
    "typecheck": "bun run typecheck:main && bun run typecheck:renderer",
    "typecheck:main": "tsc -p tsconfig.main.json --noEmit",
    "typecheck:renderer": "tsc -p tsconfig.renderer.json --noEmit",
    "build": "bun run build:main && bun run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "electron .",
    "lint": "eslint .",
    "format": "prettier -w .",
    "pack": "bun run build && electron-builder --dir",
    "dist": "bun run build && electron-builder",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:all": "bun run test && bun run test:e2e",
    "rebuild": "bun run install-deps",
    "install-deps": "electron-builder install-app-deps",
    "postinstall": "bun run install-deps"
  },
  "keywords": [],
  "author": {
    "name": "Perch Researchers",
    "email": "contact@perchresearchers.com"
  },
  "license": "MIT",
  "type": "module",
  "build": {
    "appId": "app.researchers.desktop",
    "files": [
      "dist/**",
      "node_modules/**",
      "package.json"
    ],
    "nodeGypRebuild": false,
    "npmRebuild": false,
    "beforeBuild": "bun run build",
    "directories": {
      "output": "build",
      "buildResources": "build"
    },
    "publish": {
      "provider": "github",
      "owner": "7kylor",
      "repo": "perch-researchers-app",
      "private": false,
      "releaseType": "release"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "zip"
      ],
      "category": "Office"
    }
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "arxiv-api-ts": "^1.0.4",
    "better-sqlite3": "^12.4.1",
    "drizzle-orm": "^0.44.6",
    "googleapis": "^161.0.0",
    "lucide-react": "^0.545.0",
    "mupdf": "^1.26.4",
    "next-themes": "^0.4.6",
    "node-fetch": "^3.3.2",
    "onnxruntime-node": "^1.23.0",
    "pdf-parse": "^2.2.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "sqlite-vss": "^0.1.2",
    "tesseract.js": "^6.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.7.1",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "electron-updater": "^6.6.2",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "jsdom": "^27.0.0",
    "playwright": "^1.56.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vitest": "^3.2.4",
    "wait-on": "^9.0.1"
  }
}